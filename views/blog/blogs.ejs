<%- include('../partials/header') %>

<div class="d-flex justify-content-center">
    <a href="/blogs/new" class="btn btn-primary w-25">New Blog</a>
</div>

<div class="container-fluid mt-3">
    <div class="row">

        <% blogs.forEach((blog) => { %>

        <div class="container col-xl-5 mb-3 py-2 px-4 blog-container blog-container-hover">
            <h1><%= blog.title %></h1>
            <h6><%= blog.updated.toDateString() %></h6>
            <p><%- blog.content.substring(0, 300) %>...... <a href="blogs/<%= blog._id %>">Read More</a></p>
        </div>

        <% }) %>
    </div>

</div>



<%- include('../partials/footer') %>