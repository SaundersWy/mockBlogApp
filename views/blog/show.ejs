<div class="container mt-5 p-3 blog-container">
    <h1><%= blog.title %></h1>
    <h6><%= blog.updated.toDateString() %></h6>
    <p><%- blog.content %></p>

    <form action="/blogs/<%= blog._id %>/?_method=DELETE" method="post">
        <a class="btn btn-warning" href="/blogs">Back</a>
        <a class="btn btn-primary" href="/blogs/<%= blog.id %>/edit">Edit Blog</a>
        <button class="btn btn-danger">Delete Post</button>
    </form>
</div>

